<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="">
      <nav>
        <%= link_to "PRIVATE EVENTS", events_path, class: "has-text-weight-bold" %>
        <ul>
          <li>
            <%= navmenu("logout", destroy_user_session_path, user_signed_in?)%>
          </li>
          <li>
            <%= navmenu("Create Event", new_event_path, user_signed_in?)%>
          </li>
          <li>
            <%= navmenu("My Events", "/myevents", user_signed_in?)%>
          </li>
        </ul>
      </nav>
      <%if alert%>
        <div class="notification is-danger">
          <button class="delete"></button>
          <%= alert %>
        </div>
      <% elsif notice%>
        <div class="notification is-primary">
          <button class="delete"></button>
          <%= notice %>
        </div>
      <%end%>
      <%= yield %>
   
      <%= footer(user_signed_in?) %>
    </div>
  </body>
</html>
